<table class = "user_list_table" align='center' border = '1'>
<tr>
	<th>
		S.NO
	</th>
	<th>
		NAME
	</th>
	<th>
		BLOOD GROUP
	</th>
	<th>
		GENDER
	</th>
	<th>
		EMAIL
	</th>
	<th>
		CONTACT NUMBER
	</th>
	<th>
		AREA OF INTEREST
	</th>
	<th>
		GRADUATION DETAILS
	</th>
</tr>
{% if results|length == 1 %}
<tr>
	<td>
		{{ results.id }}	
	</td>
	<td>
		{{ results.getFirstName }}
	</td>

	<td>
		{{ results.getLastName }}
	</td>

	<td>
		{{ results.getBloodGroup }}
	</td>
	
	<td>
		{{ results.getGender }}
	</td>

	
	<td>
		{% for items in results.getEmailId %}
			<ul style = "list-style-type:none">
				<li style = "display:block"> {{ items.getEmailId }} </li>
			</ul>
		{% endfor %}
	</td>

	<td>
		{% for items in results.getContactNumber %}
			<ul style = "list-style-type:none">
				<li style = "display:block"> {{ items.getContactNumber }} </li>
			</ul>
		{% endfor %}
	</td>

	<td>
		{% for items in results.getInterest %}
			<ul style = "list-style-type:none">
				<li style = "display:block"> {{ items.getInterest }} </li>
			</ul>
		{% endfor %}
	</td>

	<td>
		{% for items in results.getGraduationType %}
			<ul style = "list-style-type:none">
				<li style = "display:block"> {{ items.getGraduation }} </li>
			</ul>
		{% endfor %}
	</td>
	<td>
		<input type = "button" class = "edit_user" id = "edit_list" value = "Edit" onclick = "location.href = 'edit/{{ results.getId }}'">
	</td>
</tr>

{% else %}

	{% for item in results %}
	<tr>
		<td>
			{{ item.id }}
			
		</td>
		<td>
			{{ item.getFirstName }}
		</td>

		<td>
			{{ item.getBloodGroup }}
		</td>
		
		<td>
			{{ item.getGender }}
		</td>

		
		<td>
			{% for items in item.getEmailId %}
				<ul style = "list-style-type:none">
					<li style = "display:block"> {{ items.getEmailId }} </li>
				</ul>
			{% endfor %}
		</td>

		<td>
			{% for items in item.getContactNumber %}
				<ul style = "list-style-type:none">
					<li style = "display:block"> {{ items.getContactNumber }} </li>
				</ul>
			{% endfor %}
		</td>

		<td>
			{% for items in item.getInterest %}
				<ul style = "list-style-type:none">
					<li style = "display:block"> {{ items.getInterest }} </li>
				</ul>
			{% endfor %}
		</td>

		<td>
			{% for items in item.getGraduationType %}
				<ul style = "list-style-type:none">
					<li style = "display:block"> {{ items.getGraduation }} </li>
				</ul>
			{% endfor %}
		</td>
		

		<td>
			<input type = "button" class = "view_user" id = "view_list" value = "View" onclick = "location.href = '{{ item.getId }}'">
		</td>
		<td>
			<input type = "button" class = "edit_user" id = "edit_list" value = "Edit" onclick = "location.href = 'edit/{{ item.getId }}'">
		</td>
	</tr>
	{% endfor %}
{% endif %}

	
</table>

{% if max > 1 %}

    <span {{ current == 1 }}>
        <a href="{{ path('list_user', {page: current-1 < 1 ? 1 : current-1}) }}">«</a>
    </span>
    {% for i in 1..max %}
    <span {{ current == i }}>
    <a href="{{ path('list_user', {page: i}) }}">{{ i }}</a>
    </span>
    {% endfor %}

    <span {{ current == max }}>
        <a href="{{ path('list_user', {page: current+1 <= max ? current+1 : current}) }}">»</a>
    </span>

{% endif %}
